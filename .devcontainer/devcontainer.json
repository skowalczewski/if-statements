{
  "name": "Python If Statements Lesson",
  "image": "mcr.microsoft.com/devcontainers/python:3.9",
  "features": {},
  "customizations": {
    "vscode": {
      "extensions": [
        "ms-python.python"
      ],
      "settings": {
        "github.copilot.enable": false,
        "github.copilot.inlineSuggest.enable": false,
        "github.copilotchat.enable": false,
        "github.copilot.advanced": {
          "inlineSuggest": {
            "enable": false
          },
          "panel": {
            "enable": false
          },
          "commands.enable": false,
          "notebooks.enable": false,
          "chat.enable": false
        }
      }
    }
  },
  "postCreateCommand": "pip install pytest"
}